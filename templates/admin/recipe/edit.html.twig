{% extends 'admin/admin.html.twig' %}

{% block title 'Recette : ' ~ recipe.title %}
{% block style %}
  <style>
    .category-form {
      max-width: 600px;
      margin: 0 auto;
      padding: 20px;
      border: 1px solid #ccc;
      border-radius: 5px;
      background-color: #f9f9f9;
    }
    .category-form h1 {
      text-align: center;
      margin-bottom: 20px;
    }
    .category-form a {
      display: inline-block;
      margin-top: 20px;
      text-decoration: none;
      color: #007bff;
    }
    .category-form a:hover {
      text-decoration: underline;
    }
    .category-form input,
    .category-form select,
    .category-form textarea {
      width: 100%;
      padding: 10px;
      margin: 10px 0;
      border: 1px solid #ccc;
      border-radius: 5px;
    }
    .category-form button {
      display: block;
      width: 100%;
      padding: 10px;
      background-color: #007bff;
      color: white;
      border: none;
      border-radius: 5px;
      cursor: pointer;
    }
    .category-form button:hover {
      background-color: #0056b3;
    }
  </style>
{% endblock %}

{% block body %}
  <div class="category-form">
    <h1>{{ recipe.title }}</h1>
    <img src="{{ vich_uploader_asset(recipe, 'thumbnailFile') }}" alt="{{ recipe.title }}" style="width: 100%; margin-bottom: 20px;"/>
    {{ form(form) }}
    <a href="{{ path('admin.recipe.index') }}">Retour</a>
  </div>
{% endblock %}
